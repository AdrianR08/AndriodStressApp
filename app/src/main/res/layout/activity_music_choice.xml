<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_music">

   <ImageView
       android:id="@+id/imageView3"
       android:layout_width="155dp"
       android:layout_height="166dp"
       android:layout_marginTop="32dp"
       android:layout_marginBottom="533dp"
       android:contentDescription="@string/how_ru_life_logo"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:srcCompat="@drawable/logo" />


   <ImageView
       android:id="@+id/backButton"
       android:layout_width="40dp"
       android:layout_height="43dp"
       android:layout_marginStart="30dp"
       android:layout_marginTop="32dp"
       android:layout_marginEnd="60dp"
       android:layout_marginBottom="204dp"
       android:contentDescription="@string/sound_button"
       app:layout_constraintBottom_toTopOf="@+id/toggleWaves"
       app:layout_constraintEnd_toStartOf="@+id/imageView3"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:srcCompat="@drawable/backbutton" />


   <ToggleButton
       android:id="@+id/toggleRain"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="10dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="10dp"
       android:layout_marginBottom="340dp"
       android:background="@drawable/rounded_button_toggle"
       android:checked="false"
       android:textColor="@android:color/black"
       android:textOff="@string/rain"
       android:textOn="@string/rain"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/toggleMeditation"
       app:layout_constraintStart_toEndOf="@+id/toggleForest"
       app:layout_constraintTop_toBottomOf="@+id/toggleBirds"
       app:layout_constraintVertical_bias="1.0" />

   <ToggleButton
       android:id="@+id/toggleWaves"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="40dp"
       android:layout_marginTop="12dp"
       android:layout_marginEnd="14dp"
       android:background="@drawable/rounded_button_toggle"
       android:checked="false"
       android:text="@string/waves"
       android:textColor="@android:color/black"
       android:textOff="@string/waves"
       android:textOn="@string/waves"
       app:layout_constraintBottom_toTopOf="@+id/toggleRain"
       app:layout_constraintEnd_toStartOf="@+id/toggleBirds"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView6"
       app:layout_constraintVertical_bias="0.096" />

   <ToggleButton
       android:id="@+id/toggleFire"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"

       android:layout_marginStart="14dp"
       android:layout_marginTop="15dp"
       android:layout_marginEnd="40dp"
       android:background="@drawable/rounded_button_toggle"
       android:checked="false"
       android:text="@string/fire"
       android:textColor="@android:color/black"
       android:textOff="@string/fire"
       android:textOn="@string/fire"
       app:layout_constraintBottom_toTopOf="@+id/toggleRain"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@+id/toggleBirds"
       app:layout_constraintTop_toBottomOf="@+id/textView6"
       app:layout_constraintVertical_bias="0.0" />

   <ToggleButton
       android:id="@+id/toggleForest"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="40dp"
       android:layout_marginTop="27dp"
       android:layout_marginEnd="14dp"
       android:layout_marginBottom="340dp"
       android:background="@drawable/rounded_button_toggle"
       android:checked="false"
       android:text="@string/forest"
       android:textColor="@android:color/black"
       android:textOff="@string/forest"
       android:textOn="@string/forest"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/toggleRain"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/toggleWaves" />

   <ToggleButton
       android:id="@+id/toggleMeditation"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="14dp"
       android:layout_marginTop="27dp"
       android:layout_marginEnd="30dp"
       android:layout_marginBottom="341dp"
       android:background="@drawable/rounded_button_toggle"
       android:checked="false"
       android:text="@string/meditation"
       android:textColor="@android:color/black"
       android:textOff="@string/meditation"
       android:textOn="@string/meditation"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@+id/toggleRain"
       app:layout_constraintTop_toBottomOf="@+id/toggleFire" />

   <ToggleButton
       android:id="@+id/toggleBirds"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="10dp"
       android:layout_marginTop="15dp"
       android:layout_marginEnd="10dp"
       android:layout_marginBottom="415dp"
       android:background="@drawable/rounded_button_toggle"
       android:checked="false"
       android:text="@string/birds"
       android:textColor="@android:color/black"
       android:textOff="@string/birds"
       android:textOn="@string/birds"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/toggleFire"
       app:layout_constraintStart_toEndOf="@+id/toggleWaves"
       app:layout_constraintTop_toBottomOf="@+id/textView6" />

   <TextView
       android:id="@+id/textView6"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="120dp"
       android:layout_marginTop="16dp"
       android:layout_marginEnd="118dp"
       android:layout_marginBottom="479dp"
       android:text="@string/sound_choice"
       android:textColor="@android:color/black"
       android:textSize="28sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/imageView3" />

   <TextView
       android:id="@+id/textView7"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="90dp"
       android:layout_marginTop="160dp"
       android:layout_marginEnd="90dp"
       android:layout_marginBottom="265dp"
       android:text="@string/number_of_cycles"
       android:textColor="@android:color/black"
       android:textSize="28sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView6" />

   <ToggleButton
       android:id="@+id/cycle1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="60dp"
       android:layout_marginTop="22dp"
       android:layout_marginEnd="20dp"
       android:layout_marginBottom="22dp"
       android:background="@drawable/rounded_button_toggle"
       android:checked="false"
       android:text="@string/_1"
       android:textColor="@android:color/black"
       android:textOff="@string/_1"
       android:textOn="@string/_1"
       app:layout_constraintBottom_toTopOf="@+id/cycle5"
       app:layout_constraintEnd_toStartOf="@+id/cycle2"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView7" />

   <ToggleButton
       android:id="@+id/cycle2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="10dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="10dp"
       android:layout_marginBottom="200dp"
       android:background="@drawable/rounded_button_toggle"
       android:checked="false"
       android:text="@string/_2"
       android:textColor="@android:color/black"
       android:textOff="@string/_2"
       android:textOn="@string/_2"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/cycle3"
       app:layout_constraintStart_toEndOf="@+id/cycle1"
       app:layout_constraintTop_toBottomOf="@+id/textView7" />

   <ToggleButton
       android:id="@+id/cycle3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginTop="22dp"
       android:layout_marginEnd="60dp"
       android:layout_marginBottom="22dp"
       android:background="@drawable/rounded_button_toggle"
       android:checked="false"
       android:text="@string/_3"
       android:textColor="@android:color/black"
       android:textOff="@string/_3"
       android:textOn="@string/_3"
       app:layout_constraintBottom_toTopOf="@+id/cycle10"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@+id/cycle2"
       app:layout_constraintTop_toBottomOf="@+id/textView7"
       app:layout_constraintVertical_bias="1.0" />

   <ToggleButton
       android:id="@+id/cycle10"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="90dp"
       android:layout_marginBottom="130dp"
       android:background="@drawable/rounded_button_toggle"
       android:checked="false"
       android:text="@string/_10"
       android:textColor="@android:color/black"
       android:textOff="@string/_10"
       android:textOn="@string/_10"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@+id/cycle5"
       app:layout_constraintTop_toBottomOf="@+id/cycle2" />

   <ToggleButton
       android:id="@+id/cycle5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="90dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="20dp"
       android:layout_marginBottom="130dp"
       android:background="@drawable/rounded_button_toggle"
       android:checked="false"
       android:text="@string/_5"
       android:textColor="@android:color/black"
       android:textOff="@string/_5"
       android:textOn="@string/_5"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/cycle10"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/cycle2" />

   <Button
       android:id="@+id/nextButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="161dp"
       android:layout_marginTop="180dp"
       android:layout_marginEnd="161dp"
       android:layout_marginBottom="50dp"
       android:backgroundTint="@color/teal_200"
       android:text="@string/next"
       android:textColor="@android:color/white"
       android:textSize="16sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView7" />


</androidx.constraintlayout.widget.ConstraintLayout>
