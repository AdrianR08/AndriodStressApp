<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Button Background Color -->
    <solid android:color="#405C8B" /> <!-- Replace with your desired color -->

    <!-- Rounded Corners -->
    <corners android:radius="20dp" /> <!-- Adjust the radius to your preference -->

    <!-- Optional: Add a Border -->
    <stroke
        android:width="6dp"
        android:color="#007ACC " /> <!-- Replace with your border color -->

    <!-- Optional: Add Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
